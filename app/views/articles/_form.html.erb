<%= form_with(model: article) do |form| %>
  <% if article.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(article.errors.count, "error") %> prohibited this article from being saved:</h2>

      <ul>
        <% article.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :detail, style: "display: block" %>
    <%= form.text_area :detail %>
  </div>

  <div>
    <%= form.label :brand_id, style: "display: block" %>
    <%= form.collection_select :brand_id, @brand, :id, :name %>
  </div>

  <div>
    <%= form.label :price, style: "display: block" %>
    <%= form.text_area :price %>
  </div>

  <div>
    <% @var = current_user.try(:id) %>
    <% form.label :user_id, style: "display: block" %>
    <%= form.hidden_field :user_id, value: @var %>
  </div>

  <div>
    <%= form.fields_for :tags do |t| %>
      <%= render "tag_fields", :f => t %>
    <% end %>
      
    <div>
      <br>
      <%= link_to_add_association "Nuevo tag", form, :tags %>
    </div>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
