<p style="color: green"><%= notice %></p>
<h1>Articles</h1>
<% if user_signed_in?  %>
  <p>App operativa </p>
  <%= button_to( "Sign Out", destroy_user_session_path, method: :delete, class: "btn btn-danger btn-sm mb-1" ) %>
  <%= link_to "New article", new_article_path %>
<% else %>

  <p>Su sesion no esta iniciada</p>
  <%= link_to "Sign up", new_user_registration_path, class: "btn btn-primary btn-sm mb-1" %>
  <br>
  <%= link_to "Log in", new_user_session_path, class: "btn btn-secondary btn-sm mb-1"  %>

<% end %>

<div id="articles">
  <% @articles.each do |article| %>
    <%= render article %>
    <p>
      <%= link_to "Show this article", article %>
    </p>
  <% end %>
</div>