<p style="color: green"><%= notice %></p>
<h1>Articles</h1>
<% if user_signed_in?  %>
  <%= link_to "New article", new_article_path, class: "btn btn-primary mb-1" %>
<% end %>

<div id="articles">
  <% @articles.each do |article| %>
    <%= render article %>
    <p>
      <%= link_to "Show this article", article %>
    </p>
  <% end %>
</div>