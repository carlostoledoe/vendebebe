<p style="color: green"><%= notice %></p>

<h1>Brands</h1>
<% if user_signed_in? %>
  <%= link_to "Nueva marca", new_brand_path, class: "btn btn-primary" %>
<% end %>
<br>

<div id="brands">
  <% @brands.each do |brand| %>
    <%= render brand %>
    <p>
      <%= link_to "Show this brand", brand %>
    </p>
  <% end %>
</div>

