<% @cart.orderables.each do |orderable| %>
  <% article = orderable.article %>

  <div id="<%= "cart-#{article.id}" %>">
    <div class="row">
      <div class="col-3">
        <strong>Art√≠culo:</strong>
        <%= article.name %>
      </div>

      <div class="col-2">
        <strong>Precio unitario:</strong>
        <%= article.price %>
      </div>

      <div class="col-4">
        <%= form_with(url: cart_add_path) do |f| %>
          <%= f.hidden_field :id, value: article.id %>
          <%= f.number_field :quantity, value: orderable.quantity, min:0 %>
          <%= f.submit "Modificar" %>
        <% end %>
      </div>

      <div class="col-1">
        <%= form_with(url: cart_remove_path) do |f| %>
          <%= f.hidden_field :id, value: orderable.id %>
          <%= f.submit "Quitar" %>
        <% end %>
      </div>

      <div class="col-2">
        <strong>Total:</strong>
        <%= orderable.total %>
      </div>

    </div>
  </div>
<% end %>